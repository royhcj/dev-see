{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dev-see",
  "version": "0.1.0",
  "identifier": "com.devsee.desktop",
  "build": {
    "frontendDist": "../../ui/dist",
    "devUrl": "http://127.0.0.1:5173",
    "beforeDevCommand": "pnpm --filter ui dev --host 127.0.0.1 --port 5173",
    "beforeBuildCommand": "pnpm --filter ui build"
  },
  "app": {
    "windows": [
      {
        "title": "dev-see",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
