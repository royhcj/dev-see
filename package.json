{
  "name": "dev-see",
  "version": "0.1.0",
  "description": "Web-based API log viewer",
  "private": true,
  "scripts": {
    "dev": "pnpm run --parallel dev:server dev:ui",
    "dev:server": "pnpm --filter server dev",
    "dev:ui": "pnpm --filter ui dev",
    "dev:desktop": "pnpm --filter desktop dev",
    "build": "pnpm run --parallel build:ui build:server",
    "build:ui": "pnpm --filter ui build",
    "build:server": "pnpm --filter server build",
    "build:desktop": "pnpm --filter desktop build",
    "test": "pnpm run --recursive test",
    "lint": "pnpm run --recursive lint"
  }
}
